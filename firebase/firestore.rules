rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Perfil extendido
    match /profiles/{userId} {
      allow read, create: if isOwner(userId);
      allow update: if isOwner(userId) &&
        (!('uid' in request.resource.data) || request.resource.data.uid == resource.data.uid);
      allow delete: if isOwner(userId);
    }

    // Registros diarios agrupados por usuario
    match /dailyLogs/{userId}/{logId} {
      allow read, write: if isOwner(userId);
    }

    // Ejemplo de diario bajo el usuario: users/{uid}/logs/{logId}
    match /users/{userId}/logs/{logId} {
      allow read, write: if isOwner(userId);
    }
  }
}
